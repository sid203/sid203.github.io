---
import { getAllPosts, getUniqueTags } from "@/data/post";
import { collectionDateSort } from "@/utils/date";
import type { GetStaticPaths } from "astro";

export const getStaticPaths = (async ({ paginate }) => {
	const MAX_POSTS_PER_PAGE = 10;
	const MAX_TAGS = 7;
	const allPosts = await getAllPosts();
	const uniqueTags = getUniqueTags(allPosts).slice(0, MAX_TAGS);
	return paginate(allPosts.sort(collectionDateSort), {
		pageSize: MAX_POSTS_PER_PAGE,
		props: { uniqueTags },
	});
}) satisfies GetStaticPaths;

interface Props {
	uniqueTags: string[];
}

const { uniqueTags } = Astro.props;

---

{
    !!uniqueTags.length && (
        <aside>
            <h2 class="title mb-4 flex items-center gap-2 text-lg">
                Categories
                <svg
                    aria-hidden="true"
                    class="h-6 w-6"
                    fill="none"
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path d="M0 0h24v24H0z" fill="none" stroke="none" />
                    <path d="M7.859 6h-2.834a2.025 2.025 0 0 0 -2.025 2.025v2.834c0 .537 .213 1.052 .593 1.432l6.116 6.116a2.025 2.025 0 0 0 2.864 0l2.834 -2.834a2.025 2.025 0 0 0 0 -2.864l-6.117 -6.116a2.025 2.025 0 0 0 -1.431 -.593z" />
                    <path d="M17.573 18.407l2.834 -2.834a2.025 2.025 0 0 0 0 -2.864l-7.117 -7.116" />
                    <path d="M6 9h-.01" />
                </svg>
            </h2>
            <ul class="flex flex-wrap lg:flex-col gap-2">
                {uniqueTags.map((tag) => (
                    <li>
                        <a class="cactus-link flex items-center justify-center lg:justify-start capitalize" href={`/tags/${tag}/`}>
                            <span class="sr-only">View all posts with the tag</span>
                            {tag}
                        </a>
                    </li>
                ))}
            </ul>
            <span class="mt-4 block sm:text-start ">
                <a class="hover:text-link" href="/tags/">
                    View all <span aria-hidden="true">â†’</span>
                    <span class="sr-only">blog tags</span>
                </a>
            </span>
        </aside>
    )
}
